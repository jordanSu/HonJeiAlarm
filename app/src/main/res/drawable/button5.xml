<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#6b2072"></solid>
            <stroke android:color="#000000" android:width="3dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="315" android:startColor="#ff3fdb" android:endColor="#b03dab"></gradient>
            <stroke android:color="#000000" android:width="3dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
</selector>