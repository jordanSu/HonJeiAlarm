<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1a641a"></solid>
            <stroke android:color="#000000" android:width="3dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="315" android:startColor="#28ff4d" android:endColor="#21cc3b"></gradient>
            <stroke android:color="#000000" android:width="3dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
</selector>